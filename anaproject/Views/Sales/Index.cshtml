            </div>
        }
    </div>
</section>

<script>
// Filtreleme iÅŸlevi
document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        // Aktif buton stilini gÃ¼ncelle
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        const category = this.dataset.category;
        const cars = document.querySelectorAll('.car-card');
        
        cars.forEach(car => {
            if (category === 'all' || car.dataset.category === category) {
                car.style.display = 'block';
            } else {
                car.style.display = 'none';
            }
        });
    });
});

// Fiyat teklifi talebi
function requestQuote(carModel) {
    const name = prompt('AdÄ±nÄ±z:');
    const email = prompt('E-posta adresiniz:');
    const phone = prompt('Telefon numaranÄ±z:');
    
    if (name && email && phone) {
        const quoteData = {
            name: name,
            email: email,
            phone: phone,
            carModel: carModel
        };
        
        fetch('@Url.Action("RequestQuote", "Sales")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(quoteData)
        })
        .then(response => response.json())
        .then(data => {
            alert('Fiyat teklifiniz hazÄ±rlanÄ±yor. En kÄ±sa sÃ¼rede size ulaÅŸacaÄŸÄ±z.');
        })
        .catch(error => {
            alert('Bir hata oluÅŸtu. LÃ¼tfen tekrar deneyin.');
        });
    }
}
</script> 