@model IEnumerable<anaproject.Models.Cars.Car>

@{
    ViewData["Title"] = "SOFT Sedan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="audi-suv-hero text-center py-5 mb-4">
    <h1 class="display-4 font-weight-bold" data-aos="fade-down">SOFT Sedan Modelleri</h1>
    <p class="lead mb-0">Zarafet, yenilik ve sürüş keyfini bir araya getiren SOFT Sedan ailesiyle tanışın</p>
</div>

<!-- Kartların üstüne video alanı -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12">
            <div class="ratio ratio-16x9 modern-video-wrapper">
                <video class="w-200 modern-video" controls>
                    <source src="/videos/softsedan.mp4" type="video/mp4">
                </video>
                <div class="modern-video-overlay" style="display:none;">
                    <button class="modern-play-btn" aria-label="Oynat">
                        <svg width="60" height="60" viewBox="0 0 60 60"><circle cx="30" cy="30" r="30" fill="rgba(0,230,208,0.85)"/><polygon points="24,18 46,30 24,42" fill="#fff"/></svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-md-4 g-3">
        @foreach (var car in Model)
        {
            <div class="col d-flex align-items-stretch">
                <div class="card audi-card shadow-sm mb-0">
                    <img src="@(string.IsNullOrEmpty(car.CarImage) ? "/img/softSUV.jpeg" : car.CarImage)" class="card-img-top" alt="@car.CarAdi" style="height:220px;object-fit:cover;" data-aos="zoom-in">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title" style="font-weight:bold; color:#fff;">@car.CarAdi</h5>
                        <p class="card-text mb-2" style="color:#b0e6e0;">@car.CarModel</p>
                        <p class="card-text flex-grow-1" style="color:#b0e6e0;">@car.CarTur</p>
                        <a href="/Sedan/Discover/@car.ID" class="btn btn-outline-primary mt-auto">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <h2 class="mb-3" data-aos="fade-up">SOFT Sedan Ailesi</h2>
            <p>
                SOFT Sedan modelleri, şehir içi şıklığı ve uzun yol konforunu bir arada sunar. Dingin sürüş deneyimi, gelişmiş teknolojiler ve premium iç mekan tasarımıyla her yolculuğu keyifli hale getirir.
            </p>
            <ul class="list-unstyled">
                <li>• Akıcı ve aerodinamik dış tasarım</li>
                <li>• Sessiz ve konforlu sürüş deneyimi</li>
                <li>• Akıllı bağlantı ve dijital kokpit teknolojileri</li>
                <li>• Güvenlikten ödün vermeyen gelişmiş sürüş destek sistemleri</li>
            </ul>
        </div>
    </div>
</div>